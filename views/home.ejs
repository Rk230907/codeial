<link rel="stylesheet" href="/css/home.css">

<style>
    /* Styling for the home container */
    #home-container {
        display: flex;
        justify-content: space-between;
    }

    /* Styling for the feed posts section */
    #feed-posts {
        flex: 1;
        margin-right: 20px;
    }

    /* Styling for the user friends section */
    #user-friends {
        flex: 0.5;
    }

    /* Styling for the form inside the feed posts section */
    #new-post-form {
        margin-bottom: 10px;
    }

    /* Styling for the posts list container */
    #posts-list-container {
        list-style-type: none;
        padding: 0;
    }

    /* Styling for each post */
    .post {
        margin-bottom: 10px;
        padding: 10px;
        border: 1px solid #ccc;
    }

    /* Styling for the comments section */
    .comments-section {
        margin-top: 10px;
        padding: 10px;
        border: 1px solid #ccc;
    }

    /* Styling for the users you may know section */
    #user-friends {
        margin-top: 10px;
        padding: 10px;
        border: 1px solid #ccc;
    }

    /* Styling for the post form */
    #new-post-form textarea {
        width: 100%;
        padding: 5px;
        border: 1px solid #ccc;
        resize: vertical;
    }

    #new-post-form input[type="submit"] {
        margin-top: 5px;
        padding: 12px 30px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 10px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 500;
        /* font-size:medium;     */

    }

    #new-post-form input[type="submit"]:hover {
        background-color: #45a049;
    }
</style>

<div id="home-container">
    <section id="feed-posts">
        <h4>Posts</h4>
        <% if(locals.user){ %>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" cols="30" rows="3" placeholder="Type Here..." required></textarea>
            <input type="submit" value="Post">
        </form>
        <% } %>

        <div id="posts-list-container">
            <ul>
                <% for(post of posts){ %>

                <%- include('_post') -%>

                <%} %>
            </ul>
        </div>
    </section>


    <section id="user-friends">
        <h4>Users you may know!!</h4>
        <% for(u of all_users){%>
        <p>
            <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
        </p>
        <% } %>
    </section>
    <%- include('_chat_box') -%>
</div>

<!-- importing this script for creating the comments -->
<script src="/js/home_post_comments.js"></script>
<script src="/js/home_posts.js"></script>

<!-- import the script files for toggle likes, also run it over for the already present posts and comments on the page -->
<script src="js/toggle_likes.js"></script>
<script>
    $('.toggle-like-button').each(function(){
        let self = this;
        let toggleLike = new ToggleLike(self);
    });
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js"></script>
<script src="/js/chat_engine.js"></script>
<% if(locals.user){ %>
<script>
    new ChatEngine('user-chat-box', '<%= locals.user.email %>');
</script>
<%}%>
