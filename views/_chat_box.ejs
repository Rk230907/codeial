<style>
    /* Chatbox container */
    #user-chat-box {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 300px;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        background-color: #fff;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    /* Chat messages list */
    #chat-messages-list {
        list-style-type: none;
        padding: 0;
    }

    /* Other messages */
    .other-messages {
        background-color: #f2f2f2;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
    }

    /* Self message */
    .self-message {
        background-color: #e2f7fc;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
    }

    /* Chat message input container */
    #chat-message-input-container {
        margin-top: 10px;
    }

    /* Chat message input */
    #chat-message-input {
        width: 100%;
        padding: 5px;
        border-radius: 5px;
        border: 1px solid #ccc;
        margin-bottom: 10px;
    }

    /* Send button */
    #send-message {
        padding: 5px 10px;
        border-radius: 5px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
    }
</style>



<% if(locals.user){ %>
    <div id="user-chat-box">
        <h1 style="color: cadetblue;">
            Codeial Chatroom
        </h1>
        <ul id="chat-messages-list">
            <li class="other-messages">
                <span>
                    
                </span>
            </li>
            <li class="self-message">
                <span>
                    
                </span>
            </li>
        </ul>
        <div id="chat-message-input-container">
            <input id="chat-message-input" placeholder="Type message here.....">
            <button id="send-message">Send</button>
        </div>
    </div>
<%}%>